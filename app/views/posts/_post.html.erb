<% cache post do %>
  <li>
    Title: <%= post.title %><br/>
    Comments count: <%= post.comments.count %><br/>
    Description: <p><%= post.description %></p>
    Category: <%= post.category.name %><br/>
    Rating: <%= sprintf('%.2f', post.rating) %><br/>
    Author name: <%= post.author.name %><br/>
    Author ip: <%= post.author.ip %><br/>
    Created at: <%= post.created_at.to_date %><br/>
    <%= link_to 'Show', post %>
  </li>
<% end %>
