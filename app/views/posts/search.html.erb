<div id="search_form">
  <%= form_for :find_post, remote: true do |f| %>
    <fieldset>
      <legend>Search</legend>
      <div>
        Rating from: <%= f.select :rating_from, options_for_select((1..5).step(0.5)) %>
                 to: <%= f.select :rating_to,   options_for_select((1..5).step(0.5)) %>
      </div>
      <div>
        Date: <%= f.date_field :date, placeholder: '23.12.2013' %>
      </div>
      <div>
        <%= submit_tag "Find" %> 
      </div>
    </fieldset> 
  <% end %>
</div>
<div id='posts'>
</div>